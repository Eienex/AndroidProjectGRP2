<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rollingpinbakery.rollingpinbakery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Store"
            android:label="@string/title_activity_store"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Account"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="Log In">
            <intent-filter>
                <action android:name="com.rollingpinbakery.rollingpinbakery.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Register"
            android:label="Registration"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.rollingpinbakery.rollingpinbakery.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".CakesCategory"
            android:label="@string/title_activity_cakes_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CookiesCategory"
            android:label="@string/title_activity_cookies_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PastriesCategory"
            android:label="@string/title_activity_pastries_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DonutCategory"
            android:label="@string/title_activity_donut_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BreadsCategory"
            android:label="@string/title_activity_breads_category"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>